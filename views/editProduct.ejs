<%- include("./partials/header")  %> 

<div class="container mt-5">
    <div class="mx-auto" style="width: 50%;">
        <h1 class="text-align-center">Edit <%= storeMatchingProduct.products[0].name %></h1>
        <form action="/vendor/<%= currentUser._id %>/store/<%= storeMatchingProduct._id %>/<%= storeMatchingProduct.products[0]._id %>?_method=PUT" method="POST">
            <div class="form-group">
                Item name:
                <input class="form-control shadow-none" type="text" name="product[name]" value="<%= storeMatchingProduct.products[0].name %> ">
            </div>
            <div class="form-group">
                Price:
                <input  class="form-control shadow-none" type="number" name="product[price]" min="0" step="0.1" value=<%= storeMatchingProduct.products[0].price %> >                
            </div>
            <div class="form-group">
                Description:
                <input  class="form-control shadow-none" type="text" name=product[description] value="<%= storeMatchingProduct.products[0].description %> ">
            </div>
            <div class="form-group">
                Image link:
                <input  class="form-control shadow-none" type="text" name="product[image]" value="<%= storeMatchingProduct.products[0].image %> ">
            </div>
            <button class="custom-btn" type="submit">Submit</button>
        </form>
    </div>
</div>


<%- include("./partials/footer")  %> 