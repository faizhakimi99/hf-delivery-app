<%- include("./partials/header")  %> 

<div class="container mt-5">
    <div class="mx-auto" style="width: 50%;">
        <h1 class="text-align-center">Add new item</h1>
        <form action="/vendor/<%= currentUser._id %>/store/<%= foundStore._id %>/" method="POST">
            <div class="form-group">
                Item name:
                <input class="form-control shadow-none" type="text" name="product[name]">
            </div>
            <div class="form-group">
                Price:
                <input  class="form-control shadow-none" type="number" name="product[price]" min="0" step="0.1" >               
            </div>
            <div class="form-group">
                Description:
                <input  class="form-control shadow-none" type="text" name=product[description] >
            </div>
            <div class="form-group">
                Image link:
                <input  class="form-control shadow-none" type="text" name="product[image]" >
            </div>
            <button class="custom-btn" type="submit">Submit</button>
        </form>
    </div>
</div>


<%- include("./partials/footer")  %> 